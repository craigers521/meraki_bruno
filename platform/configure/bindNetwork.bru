meta {
  name: bindNetwork
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/networks/:networkId/bind
  body: json
  auth: bearer
}

params:path {
  networkId: {{networkId}}
  basePath: {{basePath}}
}

headers {
  Content-Type: application/json
  Accept: application/json
}

auth:bearer {
  token: {{apiKey}}
}

body:json {
  {
    "configTemplateId": "<string>",
    "autoBind": "<boolean>"
  }
}

docs {
  Bind a network to a template.
}
